<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fighters2"
    android:background="#666666">

    <TextView
        android:id="@+id/fighter2lbl"
        android:layout_width="203dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:text="Fighter 2"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="#20B8FE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameLbl2"
        android:layout_width="355dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="48dp"
        android:text="Name: Robert Whittaker"
        android:textSize="25dp"
        android:textColor="#20B8FE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fighter2lbl" />

    <TextView
        android:id="@+id/weightClassLbl"
        android:layout_width="361dp"
        android:layout_height="35dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:text="Weight Class: Middleweight"
        android:textSize="25dp"
        android:textColor="#20B8FE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ageLbl" />

    <TextView
        android:id="@+id/recordLbl"
        android:layout_width="326dp"
        android:layout_height="40dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:text="Record: 24 - 5 - 0"
        android:textSize="25dp"
        android:textColor="#20B8FE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nickNameLbl" />

    <TextView
        android:id="@+id/nickNameLbl"
        android:layout_width="373dp"
        android:layout_height="59dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:text="Nickname: The Reaper Bobby Knuckles"
        android:textSize="25dp"
        android:textColor="#20B8FE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/townLbl" />

    <TextView
        android:id="@+id/ageLbl"
        android:layout_width="221dp"
        android:layout_height="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:text="Age: 31"
        android:textSize="25dp"
        android:textColor="#20B8FE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recordLbl" />

    <TextView
        android:id="@+id/townLbl"
        android:layout_width="361dp"
        android:layout_height="46dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:text="Hometown: Otahuhu, Australia"
        android:textSize="25dp"
        android:textColor="#20B8FE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameLbl2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Go Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>