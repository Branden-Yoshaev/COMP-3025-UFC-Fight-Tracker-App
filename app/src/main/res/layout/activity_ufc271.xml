        app:layout_constraintHorizontal_bias="0.197"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vsLbl2"
        app:layout_constraintVertical_bias="0.609" />

    <TextView
        android:id="@+id/vsLbl2"
